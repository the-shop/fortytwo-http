{
  "name": "the-shop/fortytwo-http",
  "description": "HTTP library for the-shop/fortytwo-* packages",
  "license": "MIT",
  "type": "library",
  "homepage": "https://github.com/the-shop/fortytwo-http",
  "authors": [
    {
      "name": "The Shop d.o.o.",
      "homepage": "http://the-shop.io/"
    }
  ],
  "require": {
    "the-shop/fortytwo-base": "^0.1.1",
    "nikic/fast-route": "1.2",
    "mustache/mustache": "^2.12",
    "symfony/http-foundation": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Framework\\Http\\": "src/",
      "Framework\\Http\\Configuration\\": "config/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Framework\\Http\\Test\\": "test/",
      "Framework\\Base\\Test\\": "vendor/the-shop/fortytwo-base/test/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
